{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "baseUrl": ".",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "declaration": false,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "paths": {
      "@productbrew/*": ["packages/*"]
    }
  },
  "exclude": ["**/*.test.ts", "node_modules", "dist"]
}
